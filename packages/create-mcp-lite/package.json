{
  "name": "create-mcp-lite",
  "type": "module",
  "version": "0.3.0",
  "description": "An interactive CLI to create MCP (Model Context Protocol) projects with mcp-lite",
  "scripts": {
    "build": "bun run scripts/build.ts",
    "build:types": "tsc --project tsconfig.build.json --outDir dist/types --rootDir src",
    "dev": "bun run scripts/build.ts && node dist/index.js",
    "dev:local": "bun run scripts/build.ts && TEMPLATE_ROOT_PATH=../../templates node dist/index.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write .",
    "prepublishOnly": "bun run build && bun run build:types"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".gitignore"
  ],
  "bin": {
    "create-mcp-lite": "dist/index.js"
  },
  "author": "Fiberplane <info@fiberplane.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/fiberplane/mcp-lite/",
    "type": "git"
  },
  "dependencies": {
    "@clack/core": "^0.3.4",
    "@clack/prompts": "^0.7.0",
    "giget": "^1.2.3",
    "open": "^10.1.0",
    "picocolors": "^1.0.1",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  }
}
