{
  "name": "mcp-lite",
  "type": "module",
  "version": "0.2.3",
  "homepage": "https://github.com/fiberplane/mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiberplane/mcp.git",
    "directory": "packages/core"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  },
  "devDependencies": {
    "arktype": "^2.1.22",
    "typescript": "^5.9.2",
    "zod": "^4.1.5"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bun run scripts/build.ts",
    "build:types": "tsc --project tsconfig.build.json --outDir dist/types --rootDir src",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write .",
    "prepublishOnly": "bun run build && bun run build:types"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  }
}
